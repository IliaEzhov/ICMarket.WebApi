{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=ICMarket.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Blockcypher": {
    "BaseUrl": "https://api.blockcypher.com",
    "Endpoints": [
      "/v1/eth/main",
      "/v1/dash/main",
      "/v1/btc/main",
      "/v1/btc/test3",
      "/v1/ltc/main"
    ]
  },
  "Cors": {
    "AllowedOrigins": [ "https://yourdomain.com" ],
    "AllowedMethods": [ "GET", "POST" ],
    "AllowedHeaders": [ "Content-Type" ]
  },
  "RateLimiting": {
    "PermitLimit": 100,
    "WindowInSeconds": 60,
    "FetchPermitLimit": 5,
    "FetchWindowInSeconds": 60
  }
}
